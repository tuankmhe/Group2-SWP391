<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>newsList</servlet-name>
        <servlet-class>controller.news.newsList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newsDetail</servlet-name>
        <servlet-class>controller.news.newsDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>controller.product.AddProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/addproduct</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>listproduct</servlet-name>
        <servlet-class>controller.product.listproduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listproduct</servlet-name>
        <url-pattern>/listproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newsList</servlet-name>
        <url-pattern>/newsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newsDetail</servlet-name>
        <url-pattern>/newsDetail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
